{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contact</h1>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.name) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.email) }}
        </div>
    </div>
    {{ form_row(form.subject) }}
    {{ form_row(form.body) }}

    <div class="text-right">
        <button type="submit" class="btn btn-primary">
            Envoyer
        </button>
    </div>

    {{ form_end(form) }}
{% endblock %}

